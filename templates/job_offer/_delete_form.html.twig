<form method="post" action="{{ path('job_offer_delete', {'id': job_offer.id}) }}" onsubmit="return confirm('{{ 'company.job_offer.show.actions.delete.confirm'|trans }}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ job_offer.id) }}">
    <button class="btn">{{ 'company.job_offer.show.actions.delete.button'|trans }}</button>
</form>
